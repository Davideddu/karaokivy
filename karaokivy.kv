#:kivy 1.8.0
#:import splitext os.path.splitext
#:import basename os.path.basename

<ColorBox@Button>:
	background_normal: "atlas://data/images/defaulttheme/empty"
	background_down: "atlas://data/images/defaulttheme/empty"
	background_disabled: "atlas://data/images/defaulttheme/empty"

<IconButton@Button>:
	icon: "atlas://data/images/defaulttheme/transparent"
    label: ""

    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        Image:
            source: root.icon
            size_hint: (.4, 1.)
        Label:
            text: root.label
            size_hint: (.6, 1.)
            text_size: self.size
            halign: 'left'
            valign: 'middle' 


<ReadyActionBar>:
	pos_hint: {'top':1}
	actview: actview.__self__

	ActionView:
		id: actview
		use_separator: True

		# The ActionBar doesn't work without an ActionPrevious: let's add an invisible one
		ActionPrevious:
			size_hint_x: None
			with_previous: False
			app_icon: "atlas://data/images/defaulttheme/transparent"
			width: 0

		ActionOverflow

<SettingColor>:
	rect: rect

	ColorBox:
		id: rect
		pos: root.pos

<SettingFont>:
	label: label

    Label:
    	id: label
        text: str(root.value)
        pos: root.pos
        font_size: '15sp'

<SettingSoundFont>:
    label: label

    Label:
        id: label
        text: basename(str(root.value))
        pos: root.pos
        font_size: '15sp'

<PluginsPanel>:
    spacing: 5
    padding: 5
    plugins_box: plugins_box.__self__
    defaults_box: defaults_box.__self__

    AnimTabbedPanel:
        do_default_tab: False
        size_hint_x: .25
        orientation: "vertical"
        #height: "500dp"


        TabbedPanelItem:
            text: "Plug-ins"

            GridLayout:
                id: plugins_box
                cols: 1
                spacing: 5
                padding: 5
                size_hint_y: None
                height: self.minimum_height

        TabbedPanelItem:
            text: "Defaults"

            BoxLayout:
                id: defaults_box
                size_hint_y: None
                orientation: "vertical"

<PluginItem>:
    size_hint: .25, None
    height: (labellayout.texture_size[1] if labellayout.texture_size[1] > dp(48) else dp(48)) + dp(10)
    content: content
    title: self.manifest.title
    desc: self.manifest.short_description
    stock: self.manifest.stock

    canvas:
        Color:
            rgba: 47 / 255., 167 / 255., 212 / 255., self.selected_alpha
        Rectangle:
            pos: self.x, self.y + 1
            size: self.size
        Color:
            rgb: .2, .2, .2
        Rectangle:
            pos: self.x, self.y - 2
            size: self.width, 1

    BoxLayout:
        pos: root.pos

        AsyncImage:
            source: root.manifest.errs_loading and "atlas://data/images/defaulttheme/warning" or (root.logo != "" and root.logo or "atlas://data/images/defaulttheme/image-missing")
            size_hint_x: None
            size: ("48dp", "48dp")

        Label:
            size_hint_x: .66
            id: labellayout
            markup: True
            text: u'{0}\n[size=13sp][color=999999]{1}[/color][/size]'.format(root.title or '', not root.manifest.errs_loading and (root.desc or '') or root.manifest.errs_loading)
            font_size: '15sp'
            text_size: self.width - 32, None

        BoxLayout:
            id: content
            size_hint_x: .33


<CloseButton@ButtonBehavior+Image>
    popup: None
    source: 'atlas://data/images/defaulttheme/close'
    on_release: self.popup.dismiss()

<PluginPopup>:
    infolabel: infolabel
    screenshot: screenshot.__self__
    switch: switch.__self__

    GridLayout:
        padding: 12
        cols: 1
        size_hint: None, None
        pos: root.pos
        size: root.size

        FloatLayout:
            id: flo
            orientation: "horizontal"
            size_hint_y: None
            height: "48dp"

            CloseButton:
                popup: root
                size_hint: None, None
                x: root.x - (self.width / 2.5)
                y: root.y + root.height - (self.height / 1.5)
                size: self.texture_size

            AsyncImage:
                size_hint: None, None
                size: "48dp", "48dp"
                source: root.logo != "" and root.logo or "atlas://data/images/defaulttheme/image-missing"
                x: flo.x
                y: flo.y - dp(1) + self.height / 10

            Label:
                text: root.manifest.title + " [i](v" + root.manifest.version + ")[/i]"
                markup: True
                color: root.title_color
                size_hint_y: None
                height: self.texture_size[1] + 16
                text_size: self.width - 16, None
                font_size: root.title_size
                x: flo.x + dp(48)
                y: flo.y - dp(1) + self.height / 5

            Switch:
                id: switch
                size_hint: None, None
                x: flo.x + flo.width - self.width - dp(4)
                y: flo.y - dp(2) - self.width / 5

        Widget:
            size_hint_y: None
            height: 4
            canvas:
                Color:
                    rgba: root.separator_color
                Rectangle:
                    pos: self.x, self.y + root.separator_height / 2.
                    size: self.width, root.separator_height

        GridLayout:
            cols: 2
            padding: dp(10)
            spacing: dp(20)

            ScrollView:
                do_scroll_x: False

                Scatter:
                    id: scatt
                    do_rotation: False
                    do_scale: False
                    do_translation: False
                    size_hint_y: None
                    height: infobox.height

                    BoxLayout:
                        id: infobox
                        size_hint: None, None
                        orientation: "vertical"
                        size: scatt.width, infolabel.height

                        Label:
                            id: infolabel
                            size: self.texture_size
                            text_size: infobox.width, None
                            markup: True

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: dp(200)

                IconButton:
                    label: "Uninstall"
                    icon: "atlas://data/images/defaulttheme/delete"
                    size_hint_y: None
                    height: "40dp"
                    disabled: root.manifest.system or root.manifest.stock

                IconButton:
                    label: "Update"
                    icon: "atlas://data/images/defaulttheme/update"
                    size_hint_y: None
                    height: "40dp"
                    disabled: True

                AsyncImage:
                    id: screenshot
                    source: "atlas://data/images/defaulttheme/transparent"
                    size_hint: None, None
                    width: "200dp"

                Widget


<FileChooserArtView>:
    on_entry_added: stacklayout.add_widget(args[1])
    on_entries_cleared: stacklayout.clear_widgets()
    scrollview: scrollview
    scrollbar: scrollbar

    ScrollView:
        id: scrollview
        pos: [root.pos[0], root.pos[1]]
        height: root.height
        width: root.width - 40
        size_hint: None, None
        do_scroll_x: False
        scroll_y: scrollbar.value
        bar_color: [0, 0, 0, 0]

        Scatter:
            do_rotation: False
            do_scale: False
            do_translation: False
            size_hint_y: None
            height: stacklayout.height
            StackLayout:
                id: stacklayout
                width: scrollview.width
                size_hint_y: None
                height: self.minimum_height
                spacing: '10dp'
                padding: '10dp'

    Slider:
    	x: root.width
    	y: root.y
    	size_hint: None, None
    	width: 40
    	height: root.height - 20
    	id: scrollbar
    	orientation: "vertical"
    	min: 0
    	max: 1
    	value: max(0, min(1, scrollview.scroll_y))

<RestartPopup>:
    title: "Restart required"
    size_hint: .7, .7

    BoxLayout:
        orientation: "vertical"
            
        Label:
            text_size: self.size
            text: root.label

        Widget

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "40dp"

            Button:
                text: "Do nothing"
                on_release: root.do_nothing()

            Button:
                text: "Exit"
                on_release: app.stop()

            Button:
                text: "Restart"
                on_release: root.restart_app()



[FileThumbEntry@Widget]:
    locked: False
    path: ctx.path
    selected: self.path in ctx.controller().selection
    size_hint: None, None

    on_touch_down: self.collide_point(*args[1].pos) and ctx.controller().entry_touched(self, args[1])
    on_touch_up: self.collide_point(*args[1].pos) and ctx.controller().entry_released(self, args[1])
	size: '116dp', '116dp'

    canvas:
        Color:
            rgba: 1, 1, 1, 1 if self.selected else 0
        BorderImage:
            border: 8, 8, 8, 8
            pos: root.pos
            size: root.size
            source: 'atlas://data/images/defaulttheme/filechooser_selected'

    Image:
        size: '64dp', '64dp'
        source: ctx.controller()._get_image(ctx)
        pos: root.x + dp(24), root.y + dp(40)
    Label:
        text: ctx.controller()._unicode_noerrs(ctx.name)
        text_size: (ctx.controller().thumbsize, self.height)
        halign: 'center'
        shorten: True
        size: ctx.controller().thumbsize, '16dp'
        pos: root.center_x - self.width / 2, root.y + dp(16)

    Label:
        text: ctx.controller()._unicode_noerrs(ctx.controller()._gen_label(ctx))
        font_size: '11sp'
        color: .8, .8, .8, 1
        size: ctx.controller().thumbsize, '16sp'
        pos: root.center_x - self.width / 2, root.y
        halign: 'center'
