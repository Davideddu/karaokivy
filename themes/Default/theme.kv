# This theme is based on default Kivy Android-like theme

<TBSector@BoxLayout>:
	orientation: "horizontal"
	size_hint_x: None

# You can uncomment the following lines to change the font colour/family
# <Label>:
#    color: 0, 0, 0, 1
#    font: "/path/to/font.ttf"

<Root>:
	orientation: "vertical"
	karlabel: karlabel
	image: image
	tb: toolbar
	pbbutton: playpause
	volume: volume
	speed: speed
	pitch: pitch

    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            source: 'data/images/background.png'
            size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	            title: 'Karaokivy'
	            app_icon: "atlas://data/images/logo/logo_actionbar"
	            with_previous: False
	        ActionOverflow
	        ActionButton:
	            text: 'Open'
	            icon: 'atlas://data/images/defaulttheme/open'
	            on_release: app.show_file_dialog()
	        ActionButton:
	            text: 'Settings'
	            icon: 'atlas://data/images/defaulttheme/settings'
	            on_release: app.open_settings()
	        ActionButton:
	            text: 'Exit'
	            icon: 'atlas://data/images/defaulttheme/cancel'
	            on_release: app.stop()

	ScaleLabel:
		id: karlabel
		markup: True
		halign: "center"
		valign: "middle"

	Image:
		id: image
		source: "atlas://data/images/defaulttheme/banner"

	Toolbar:
		id: toolbar
    	pos_hint: {'bottom':1}
    	size_hint_y: None
    	height: 40
    	left: left
    	center: center
    	right: right

	    canvas:
	        Color:
	            rgba: [1, 1, 1, 1]
	        BorderImage:
	            border: [2, 2, 2, 2]
	            pos: self.pos
	            size: self.size
	            source: 'atlas://data/images/defaulttheme/action_bar_bottom'

		ToolbarSection:
			id: left
			size_hint_x: 1
			position: "left"

			MultiActionButton:
				id: playpause
				icon: "atlas://data/images/defaulttheme/media-playback-start"
				action: "play"

			Widget

		########## SPACER ###########
		BoxLayout:
			orientation: "horizontal"
		#############################

		ToolbarSection:
			id: center
			position: "center"
			size_hint_x: None

			#Widget

		########## SPACER ###########
		BoxLayout:
			orientation: "horizontal"
		#############################

		ToolbarSection:
			position: "right"
			orientation: "horizontal"
			size_hint_x: 1
			anchor_x: "right"
			anchor_y: "bottom"
			id: right

			Widget

        	SliderButton:
        		id: volume
        		type: "volume"
        		label: "Volume"
        		percentage: 50
        		height: 40
        		size_hint_y: None

        	SliderButton:
        		id: pitch
        		type: "pitch"
        		label: "Pitch"
        		percentage: 50
        		height: 40
        		size_hint_y: None

        	SliderButton:
        		id: speed
        		type: "speed"
        		label: "Speed"
        		percentage: 50
        		height: 40
        		size_hint_y: None